---
import '@/globals.css'
import {HeroEvents} from "@/components/hero-events"
import {Button} from "@/components/ui/button"
import {Switch} from "@/components/ui/switch"
import {Label} from "@/components/ui/label"
import {Card, CardHeader, CardTitle, CardDescription, CardContent} from "@/components/ui/card"
import { codeToHtml } from 'shiki'
import Navbar from '@/components/navbar.astro'
import Footer from '@/components/footer.astro'
const code = `import { log_event } from 'supso_sdk'

log_event({
  event: 'user_onboarded',
  channel: 'web_app',
  emoji: 'ðŸŽ‰'
})
`
const codeHtml = codeToHtml(code, { lang: 'typescript', theme: 'rose-pine' })
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Supso</title>
	</head>
	<body class="flex flex-col dark">
    <Navbar />
    <div class="container flex flex-col gap-16">
      <div class="animate-in fade-in slide-in-from-top-8 duration-500 py-16 lg:py-32 px-8 lg:px-24 grid grid-cols-1 lg:grid-cols-2 gap-32 items-center justify-center bg-gradient-radial from-emerald-950/50 to-80% to-zinc-950 border rounded-[2rem] lg:rounded-[3rem] shadow-2xl zoom-in-90">
      <div class="flex flex-col gap-6 items-start">
        <Button size="sm" variant="outline">Follow on X</Button>
        <h1 class="text-5xl font-semibold leading-[1.25]">Real-time digital product observability.</h1>
        <p class="leading-[2]">Build better digital products by tracking every inch of your application and all its infrastructure. Organize the product's data into kanban boards. Manage features of your product with feature flags.</p>
        <Button size="lg">Start Observing</Button>
      </div>
      <HeroEvents />
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 animate-in fade-in slide-in-from-bottom-8 duration-500 zoom-in-90">
      <Card>
        <CardHeader>
          <CardTitle>Log events easily</CardTitle>
          <CardDescription>Use our REST API or TypeScript SDK.</CardDescription>
        </CardHeader>
        <CardContent>
          <div class="bg-[#191723] p-2 rounded-[1rem] overflow-hidden">
            <div set:html={codeHtml} />
          </div>
        </CardContent>
      </Card>
      <Card>
        <CardHeader>
          <CardTitle>Organize events into boards</CardTitle>
          <CardDescription>Filter your events with tags and organize them into kanban boards.</CardDescription>
        </CardHeader>
        <CardContent>
          <div class="flex gap-4">
            <Card className="flex flex-col gap-2 p-2 flex-1 rounded-[1rem]">
              <p class="font-semibold">Contact Requests</p>
              <div class="flex flex-col gap-2">
                <Card className="p-2 rounded-[0.5rem]">new_request</Card>
                <Card className="p-2 rounded-[0.5rem]">new_request</Card>
              </div>
            </Card>
            <Card className="flex flex-col gap-2 p-2 flex-1 rounded-[1rem]">
              <p class="font-semibold">Contacted</p>
              <div class="flex flex-col gap-2">
                <Card className="p-2 rounded-[0.5rem]">new_request</Card>
                <Card className="p-2 rounded-[0.5rem]">new_request</Card>
              </div>
            </Card>
          </div>
        </CardContent>
      </Card>
      <Card>
        <CardHeader>
          <CardTitle>Get insights about the app</CardTitle>
          <CardDescription>View data inside interactive dashboards.</CardDescription>
        </CardHeader>
        <CardContent>
          <svg height="auto" viewBox="0 0 1500 500" xmlns="http://www.w3.org/2000/svg"><path d="M0 500h60V147.993q0-4-4-4H4q-4 0-4 4ZM75 500h60V350.99q0-4-4-4H79q-4 0-4 4ZM150 500h60V209.462q0-4-4-4h-52q-4 0-4 4ZM225 500h60V256.766q0-4-4-4h-52q-4 0-4 4ZM300 500h60V391.618q0-4-4-4h-52q-4 0-4 4ZM375 500h60V273.647q0-4-4-4h-52q-4 0-4 4ZM450 500h60V111.175q0-4-4-4h-52q-4 0-4 4ZM525 500h60V89.27q0-4-4-4h-52q-4 0-4 4ZM600 500h60V371.923q0-4-4-4h-52q-4 0-4 4ZM675 500h60V91.205q0-4-4-4h-52q-4 0-4 4ZM750 500h60V129.844q0-4-4-4h-52q-4 0-4 4ZM825 500h60V181.385q0-4-4-4h-52q-4 0-4 4ZM900 500h60V206.858q0-4-4-4h-52q-4 0-4 4ZM975 500h60V210.197q0-4-4-4h-52q-4 0-4 4ZM1050 500h60V95.633q0-4-4-4h-52q-4 0-4 4ZM1125 500h60V147.544q0-4-4-4h-52q-4 0-4 4ZM1200 500h60V354.117q0-4-4-4h-52q-4 0-4 4ZM1275 500h60V374.734q0-4-4-4h-52q-4 0-4 4ZM1350 500h60V360.435q0-4-4-4h-52q-4 0-4 4ZM1425 500h60V146.588q0-4-4-4h-52q-4 0-4 4Z" fill="#14b8a6"/></svg>
        </CardContent>
      </Card>
      <Card>
        <CardHeader>
          <CardTitle>Manage your app's features with flags</CardTitle>
          <CardDescription>Feature flags are a convinient way to toggle features inside you applications.</CardDescription>
        </CardHeader>
        <CardContent className='flex flex-col gap-2'>
          <Card className="flex p-4 items-center gap-4">
            <Switch id="friyay" defaultChecked={true} />
            <Label htmlFor="friyay">The feature that killed the production env on Friday.</Label>
          </Card>
          <Card className="flex p-4 items-center gap-4">
            <Switch id="forgotten" />
            <Label htmlFor="forgotten">The feature you hardcoded and forgot to turn on.</Label>
          </Card>
          <Card className="flex p-4 items-center gap-4">
            <Switch id="forgotten" />
            <Label htmlFor="forgotten">Provider responding with HTTP 200 error.</Label>
          </Card>
        </CardContent>
      </Card>
    </div>
  </div>
  <Footer />
	</body>
</html>
